    <div class="container">
      <div id="main">
        <div class="row">
          <div class="span12">
            <div id="colorpicker"></div>
          </div>
        </div>
        <div class="row color-code" id="hex">
          <div class="offset5 span2">
            <span>#ffffff</span>
          </div>
        </div>
        <div class="row color-code" id="rgb">
          <div class="offset3 span6">
            <span id="r"></span>,
            <span id="g"></span>,
            <span id="b"></span>
          </div>
        </div>
        <div class="row" id="share">
          <div class="offset3 span6">
            <div id="url">
              Link:
              <a class="url"></a>
            </div>
            <div id="buttons">
              <button class="btn btn-small" id="copy-hex" type="button">Copy HEX</button>
              <button class="btn btn-small" id="copy-rgb" type="button">Copy RGB</button>
            </div>
          </div>
        </div>
      </div>
    </div>

